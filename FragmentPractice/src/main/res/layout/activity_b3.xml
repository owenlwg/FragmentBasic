<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
>
<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:columnCount="2">
    <Button
        android:text="Add Fragment1"
        android:id="@+id/button"
        android:textAllCaps="false"
        />

    <Button
        android:text="Add Fragment2"
        android:id="@+id/button2"
        android:textAllCaps="false"/>

    <Button
        android:text="Add Fragment3"
        android:id="@+id/button3"
        android:textAllCaps="false"/>

    <Button
        android:text="Add Fragment4"
        android:id="@+id/button4"
        android:textAllCaps="false"/>

    <Button
        android:text="hide Fragment3"
        android:id="@+id/button5"
        android:textAllCaps="false"/>
    <Button
        android:text="show Fragment3"
        android:id="@+id/button6"
        android:textAllCaps="false"/>
    <Button
        android:text="hide Fragment2"
        android:id="@+id/button7"
        android:textAllCaps="false"/>
    <Button
        android:text="show Fragment2"
        android:id="@+id/button8"
        android:textAllCaps="false"/>

</GridLayout>
    <TextView
        android:id="@+id/tv_fragments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_backstack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
